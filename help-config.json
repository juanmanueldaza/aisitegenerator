  "ui": {
    "theme": {
      "primary": "#2563eb",
      "secondary": "#64748b",
      "success": "#10b981",
      "warning": "#f59e0b",
      "danger": "#ef4444"
    },
    "layout": {
      "helpPanelWidth": "400px",
      "modalMaxWidth": "800px",
      "mobileBreakpoint": "768px"
    },
    "animations": {
      "enabled": true,
      "duration": "0.3s",
      "easing": "ease-in-out"
    }
  },
  "features": {
    "contextualHelp": {
      "enabled": true,
      "triggerElements": [
        {
          "selector": "[data-help]",
          "position": "top",
          "type": "tooltip"
        },
        {
          "selector": ".education-card",
          "position": "bottom",
          "type": "popover"
        }
      ]
    },
    "progressiveDisclosure": {
      "enabled": true,
      "maxInitialItems": 3,
      "expandLabel": "Show more",
      "collapseLabel": "Show less"
    },
    "search": {
      "enabled": true,
      "placeholder": "Search help topics...",
      "minLength": 2,
      "highlightResults": true,
      "fuzzySearch": true
    },
    "feedback": {
      "enabled": true,
      "types": ["helpful", "not-helpful", "suggestion"],
      "endpoint": "/api/feedback"
    }
  },
  "integrations": {
    "github": {
      "docsUrl": "https://docs.github.com",
      "supportUrl": "https://support.github.com",
      "statusUrl": "https://www.githubstatus.com"
    },
    "external": {
      "linkBehavior": "new-tab",
      "showExternalIcon": true,
      "trustedDomains": [
        "github.com",
        "docs.github.com",
        "support.github.com"
      ]
    }
  },
  "shortcuts": {
    "toggleHelp": ["F1", "Ctrl+/"],
    "closeModal": ["Escape"],
    "nextStep": ["ArrowRight", "Space"],
    "previousStep": ["ArrowLeft", "Shift+Space"],
    "search": ["Ctrl+K", "Cmd+K"]
  },
  "localization": {
    "defaultLanguage": "en",
    "supportedLanguages": ["en"],
    "fallbackLanguage": "en",
    "rtlSupport": false
  },
  "performance": {
    "lazyLoading": true,
    "preloadCritical": true,
    "cacheContent": true,
    "cacheExpiry": "24h"
  },
  "monitoring": {
    "errorTracking": false,
    "performanceMetrics": false,
    "userJourneyTracking": false
  }
}